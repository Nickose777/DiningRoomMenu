<Window x:Class="DiningRoomMenu.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DiningRoomMenu"
        Title="MenuWindow" Height="300" Width="300" WindowState="Maximized">
    <Grid Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="{StaticResource standartBackground}">
            <local:LogoControl />
            <Button Content="Меню" Click="DisplayMenu_Click" Style="{StaticResource ButtonNavigationStyle}" />
            <Button Content="Ингредиенты" Click="DisplayIngredients_Click" Style="{StaticResource ButtonNavigationStyle}" />
            <Button Content="Склады" Click="DisplayStocks_Click" Style="{StaticResource ButtonNavigationStyle}" />
        </StackPanel>
    </Grid>
</Window>
